<section class="slice bg-white">
    <div class="w-section inverse">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="section-title-wr">
                        <h3 class="section-title left"><span>Contáctenos</span></h3>
                    </div>
                    <p>
                        @*Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.*@
                    </p>

                    <form class="form-light mt-20" role="form">
                        <div class="form-group">
                            <label>Nombre</label>
                            <input type="text" class="form-control" placeholder="Tu nombre...">
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="email" class="form-control" placeholder="Email... ">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Teléfono</label>
                                    <input type="text" class="form-control" placeholder="Numero de Teléfono...">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Asunto</label>
                            <input type="text" class="form-control" placeholder="Asunto...">
                        </div>
                        <div class="form-group">
                            <label>Mensaje</label>
                            <textarea class="form-control" id="message" placeholder="Tu mensaje..." style="height:100px;"></textarea>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <button type="reset" class="btn btn-light">Borrar</button>
                            </div>
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-base btn-icon btn-icon-right btn-fly pull-right">
                                    <span>Enviar</span>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="section-title-wr">
                                <h3 class="section-title left"><span>Informaciones</span></h3>
                            </div>
                            <div class="contact-info">

                                @foreach (var item in Model)
                                {
                                    <h5><i class="fa fa-map-marker">@Html.DisplayNameFor(model => model.Address)</i></h5>
                                    <p>@Html.DisplayFor(modelItem => item.Address)</p>

                                    <h5><i class="fa fa-mail-forward">@Html.DisplayNameFor(model => model.Email)</i></h5>
                                    <p>@Html.DisplayFor(modelItem => item.Email)</p>


                                    <h5><i class="fa fa-phone">@Html.DisplayNameFor(model => model.Phone)</i></h5>
                                    <p>@Html.DisplayFor(modelItem => item.Phone)</p>
                                }



                                @*<h5><i class="fa fa-map-marker"></i> Dirección</h5>


                                    <h5><i class="fa fa-envelope"></i> Email</h5>
                                    <p>ventas@7cimport.com.py</p>

                                    <h5><i class="fa fa-phone"></i> Telefono</h5>
                                    <p>...</p>*@
                            </div>
                        </div>
                        @*<div class="col-md-6">
                                <div class="section-title-wr">
